generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  
  id         Int @default (autoincrement())
  name       String
  email      String @unique
  password   String

}

model nexflo {

  id         String @id @default(uuid())
  triggerId  String
  trigger    Trigger?
  actions    action[]
  nexflorun  nexflorun[]
}

model Trigger {

  id         String @id @default(uuid())
  nexfloId   String @unique
  triggerId  String
  type       AvalableTrigger @relation(fields: [triggerId], references: [id])
  nexflo     nexflo  @relation(fields: [nexfloId], references: [id])
}



model action{

  id         String @id @default(uuid())
  nexfloId   String
  nexflo     nexflo @relation(fields: [nexfloId], references: [id])
  actionId   String
  type       AvalableAction @relation(fields: [actionId], references: [id])

}

model AvalableAction {

  id         String @id @default(uuid())
  name       String
  actions    action[]
}


model AvalableTrigger {

  id       String @id @default(uuid())
  name     String
  trigger  Trigger[]
}

model nexflorun {
  id            String @id @default(uuid())
  nexflowId     String
  nexflo        nexflo @relation(fields: [nexflowId], references: [id])
  nexflowoutbox nexflowoutbox?
  metadata      Json
}

model nexflowoutbox{
  id            String @id @default(uuid())
  nexflowrunId  String @unique
  nexflowrun    nexflorun @relation(fields: [nexflowrunId], references: [id])
}





